{
  "parser": "@typescript-eslint/parser",
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["@typescript-eslint", "unused-imports", "prettier"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "react/react-in-jsx-scope": "off", // .jsx에서 명시적으로 React import하지 않아도 ok
    "@typescript-eslint/consistent-type-imports": "error", // import type { Type } from으로 사용 (import { Type } from x)
    "no-unused-vars": "off",
    "react/jsx-filename-extension": [
      2,
      {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    ],
    "unused-imports/no-unused-imports": "error", // 사용하지 않는 import error
    "unused-imports/no-unused-vars": [
      // 사용하지 않는 변수 warn
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^",
        "args": "after-used",
        "argsIgnorePattern": "^"
      }
    ],
    "import/order": [
      // import 순서 규칙 error, 관련 설정
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          ["parent", "sibling"],
          "object",
          "type",
          "index"
        ],
        "pathGroups": [
          {
            "pattern": "{react*,react*/**}",
            "group": "external",
            "position": "before"
          }
        ],
        "pathGroupsExcludedImportTypes": ["react", "next"],
        "newlines-between": "always", // import 그룹 사이 줄바꿈 추가
        "alphabetize": {
          // import 알파벳 순 정렬
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ],
    "sort-imports": [
      // import 정렬
      "error",
      {
        "ignoreCase": true,
        "ignoreDeclarationSort": true,
        "ignoreMemberSort": false,
        "allowSeparatedGroups": true
      }
    ]
  }
}
